                    <a href="@Url.Action("StudentAssignments", "Student")" class="btn btn-success">View Assignments</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">📢 Announcements</h5>
