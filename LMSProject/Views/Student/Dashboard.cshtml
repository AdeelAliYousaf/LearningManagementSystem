                    <a href="@Url.Action("StudentAnnouncements", "Student")" class="btn btn-warning">View Announcements</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">✅ Submissions</h5>
                    <p class="card-text">Track your submitted assignments</p>
                    <a href="@Url.Action("StudentSubmissions", "Student")" class="btn btn-info">View Submissions</a>
                </div>
            </div>
        </div>

    </div>
</div>
