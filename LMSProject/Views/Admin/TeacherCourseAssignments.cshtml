@model List<LMSProject.Models.Course>

@{
    ViewData["Title"] = "Teacher Course Assignments";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <h2 class="mb-4 text-center">📘 Teacher Course Assignments</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Course Title</th>
                    <th>Description</th>
                    <th>Assigned Teacher</th>
                    <th>Created On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td>@(course.Teacher?.FullName ?? "N/A")</td>
                        <td>@course.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">No courses found.</div>
    }
</div>
